<div class="container">
  <div class="row">
    <%= link_to 'Add Dish', new_dish_path, class: "btn btn-success" %>
    <br>
    <h2>All Dishes</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @dishes.each do |dish| %>
          <tr>
            <td><%= dish.name %></td>
            <td><%= dish.description %></td>
            <td>$<%= dish.price %></td>
            <td><%= link_to 'Show', dish %></td>
            <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
            <td><%= link_to 'Delete', dish, method: :delete, data: { confirm: "Delete #{dish.name}?" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>    
  </div><!-- end row -->
</div><!-- end container -->


