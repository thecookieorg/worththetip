<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 text-center">
			<h1><%= gravatar_tag @user.email, size: 80 %> <%= @user.name %></h1>
			<hr>
		</div><!-- end col-md-6 col-md-offset-3 -->
	</div><!-- end row -->
	<div class="row">
		<div class="col-md-6 col-md-offset-3 text-center">
			<div class="panel panel-default">
			  <div class="panel-body">
			  	<div class="row">
			  		<div class="col-md-6">
			  			<h3>Known as:<h3>
			    		<h4><%= @user.user_name %></h4>
			  		</div><!-- end col-md-6 -->
			  		<div class="col-md-6">
			  			<h3>From:<h3>
			    		<h4><%= @user.city %></h4>
			  		</div><!-- end col-md-6 -->
			  	</div><!-- end row -->
			    
			  </div>
			</div>
		</div><!-- end col-md-6 col-md-offset-3 -->
	</div><!-- end row -->
	<div class="row">
		<div class="col-md-6 text-center">
			<div class="panel panel-default">
			  <!--<div class="panel-heading">Dish Reviews</div>-->
			  <div class="panel-body">
			  		<h3>TOTAL DISH REVIEWS: <%= @user.reviews.count %></h3>
			  		<h3>TOTAL POINTS EARNED: <%= @user.reviews.count %></h3>
			  </div>
			</div>
			<div class="panel panel-default">
			  <!--<div class="panel-heading">Dish Reviews</div>-->
			  <div class="panel-body">
			  		<h3>TOTAL BADGES EARNED</h3>
			  </div>
			</div>
		</div><!-- end col-md-6 col-md-offset-3 -->
		<div class="col-md-6 text-center">
			<div class="panel panel-default">
			  <div class="panel-heading">Dish Reviews</div>
			  <div class="panel-body">
			  		<% @user.reviews.each do |review| %>
			  			<p><% if review.overall_experience == 5 %>
                          <% 5.times do %>
                            <%= image_tag 'star-on.png' %>
                          <% end %>
                        <% elsif review.overall_experience == 4 %>
                          <% 4.times do %>
                            <%= image_tag 'star-on.png' %>
                          <% end %>
                        <% elsif review.overall_experience == 3 %>
                          <% 3.times do %>
                            <%= image_tag 'star-on.png' %>
                          <% end %>
                        <% elsif review.overall_experience == 2 %>
                          <% 2.times do %>
                            <%= image_tag 'star-on.png' %>
                          <% end %>
                        <% else %>
                            <%= image_tag 'star-on.png' %>
                        <% end %> <%= review.created_at.strftime("%m/%d/%Y") %>
                      </p>
			  			<p><%= review.content %></p>
			  			<hr>
			  		<% end %>
			  </div>
			</div>
		</div><!-- end col-md-6 col-md-offset-3 -->
	</div><!-- end row -->
</div><!-- end container -->
